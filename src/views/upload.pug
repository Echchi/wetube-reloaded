block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Please Write Title", reqired, type="text", name="title", maxlength=80)
        input(placeholder="Description", reqired, type="text", name="description", minlength=20)
        input(placeholder="Hashtags, separated by comma", reqired, type="text", name="hashtags")
        input(type="submit", value="Uplaod")